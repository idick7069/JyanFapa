<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/profilemain_userlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"


            card_view:cardCornerRadius="4dp"

            card_view:cardElevation="5dp"
            card_view:contentPadding="15dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.example.frank.jyanfapa.CircleImageView
                        android:id="@+id/profilemain_picture"
                        android:layout_width="96dp"
                        android:layout_height="102dp"
                        android:layout_gravity="center"
                        android:src="@drawable/photo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profilemain_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="名字"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/profilemain_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:singleLine="true"
                            android:text="電話"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/profilemain_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:singleLine="true"
                            android:text="用戶別"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    card_view:srcCompat="@drawable/line_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight=".5"
                            android:background="@drawable/show_text_bgcolor"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:padding="5dp"
                                android:text="生日" />

                            <TextView
                                android:id="@+id/profilemain_birth"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:gravity="right"
                                android:padding="5dp"
                                android:text="文字" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight=".5"
                            android:background="@drawable/show_text_bgcolor"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:padding="5dp"
                                android:text="性別" />

                            <TextView
                                android:id="@+id/profilemain_sex"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:gravity="right"
                                android:padding="5dp"
                                android:text="文字" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight=".5"
                        android:background="@drawable/show_text_bgcolor"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:padding="5dp"
                            android:text="電子郵件" />

                        <TextView
                            android:id="@+id/profilemain_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="文字" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight=".5"
                        android:background="@drawable/show_text_bgcolor"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:padding="5dp"
                            android:text="真實姓名" />

                        <TextView
                            android:id="@+id/profilemain_realname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="文字" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/show_text_bgcolor"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:padding="5dp"
                            android:text="地址" />

                        <TextView
                            android:id="@+id/profilemain_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="文字" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:id="@+id/profilemain_loftlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:clickable="true"


            android:focusable="true"
            app:cardBackgroundColor="@color/cardBackground"

            app:cardElevation="5dp"
            app:contentPadding="15dp"

            app:ignore="NamespaceTypo"

            card_view:cardCornerRadius="4dp"
            card_view:contentPadding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"-->
                <!--xmlns:map="http://schemas.android.com/apk/res-auto"-->
                <!--xmlns:tools="http://schemas.android.com/tools"-->
                <!--android:id="@+id/profilemain_mapview"-->
                <!--android:name="com.google.android.gms.maps.SupportMapFragment"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="250dp"-->
                <!--android:layout_margin="10dp"-->
                <!--map:cameraBearing="112.5"-->
                <!--map:cameraTargetLat="-33.796923"-->
                <!--map:cameraTargetLng="150.922433"-->
                <!--map:cameraTilt="30"-->
                <!--map:cameraZoom="13"-->
                <!--map:mapType="normal"-->
                <!--map:uiCompass="false"-->
                <!--map:uiRotateGestures="true"-->
                <!--map:uiScrollGestures="false"-->
                <!--map:uiTiltGestures="true"-->
                <!--map:uiZoomControls="false"-->
                <!--map:uiZoomGestures="true" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".7"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profilemain_loftaddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="鴿舍地址" />

            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight=".7"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profilemain_loftname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="我的鴿舍" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight=".7"

                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight=".5"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profilemain_lati"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:padding="5dp"
                        android:text="23°6963788′ N " />

                    <TextView
                        android:id="@+id/profilemain_long"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:padding="5dp"
                        android:text="120°5292158′ E" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>